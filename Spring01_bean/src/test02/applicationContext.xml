<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- name 대신 index 사용  -->

	<bean id="lee" class="test02.Address">
		
		<constructor-arg index="0" value="이순신"/>
		<constructor-arg index="1" value="서울시 강남구"/>
		<constructor-arg index="2" value="010-1512-1512"/>
		
	</bean>

	<bean id="hong" class="test02.Address">
		
		<constructor-arg index="0" value="홍길동"/>
		<constructor-arg index="1" value="경기도 수원시"/>
		<constructor-arg index="2" value="010-2222-2222"/>
		
	</bean>
	
	<bean id="jang" class="test02.Address">
		<!-- property 로  -->
		<property name="name" value="재재재" />
		<property name="addr" value="경기도 홍천시" />
		<property name="phone" value="010-3333-3333" />
	</bean>




</beans>
